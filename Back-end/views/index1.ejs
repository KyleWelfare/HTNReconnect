      <section class="form-container">
        <h1 class="form-header">Form Title</h1>
        <form action="" method="get" id="form">
          <div class="form-card">
            <h5>Number of Participants</h5>
            <p>Select the number of particpants</p>
            <select name="participants" id="participants">
              <option value="" disabled selected></option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="11">11</option>
              <option value="12">12</option>
              <option value="13">13</option>
              <option value="14">14</option>
              <option value="15">15</option>
              <option value=">16">16+</option>
            </select>
          </div>
          <div class="form-card">
            <h5>Age Range</h5>
            <p>Select the age range of participants</p>
            <div class="range-slider">
              <input
                type="text"
                id="js-range-slider"
                name="age_range"
                value=""
              />
            </div>
          </div>
          <div class="form-card">
            <div class="category">
              <input type="checkbox" name="games" id="games" />
              <label for="games">Games</label>
            </div>
            <div class="game-genre-items">
              <div class="game-genre-item">
                <input type="checkbox" name="adventure" id="adventure" />
                <label for="adventure">Adventure</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="comedy" id="comedy" />
                <label for="adventure">Comedy</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="strategy" id="strategy" />
                <label for="adventure">Strategy</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="action" id="action" />
                <label for="adventure">Action</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="cooking" id="cooking" />
                <label for="adventure">Cooking</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="sports" id="sports" />
                <label for="adventure">Sports</label>
              </div>
              <div class="game-genre-item">
                <input
                  type="checkbox"
                  name="battle-royale"
                  id="battle-royale"
                />
                <label for="adventure">Battle Royale</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="violent" id="violent" />
                <label for="adventure">Violent</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="survival" id="survival" />
                <label for="adventure">Survival</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="casual" id="casual" />
                <label for="adventure">Casual</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="indie" id="indie" />
                <label for="adventure">Indie</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="swordplay" id="swordplay" />
                <label for="adventure">Swordplay</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="cartoony" id="cartoony" />
                <label for="adventure">Cartoony</label>
              </div>
              <div class="game-genre-item">
                <input
                  type="checkbox"
                  name="psychological"
                  id="psychological"
                />
                <label for="adventure">Psychological</label>
              </div>
              <div class="game-genre-item">
                <input type="checkbox" name="shooter" id="shooter" />
                <label for="adventure">Shooter</label>
              </div>
            </div>
            <h5>Cost</h5>
            <p>Please choose a cost range</p>
            <div class="range-slider">
              <input
                type="text"
                id="js-range-slider2"
                name="my_range"
                value=""
              />
            </div>
          </div>
          <div class="form-card">
            <div class="category">
              <input type="checkbox" name="exercises" id="exercises" />
              <label for="exercise">Exercises</label>
            </div>
            <h5>Types of Exercises</h5>
            <p>Please select the types of exercises you are interested in</p>
            <div class="exer-types">
              <div class="exer-type">
                <input type="checkbox" name="cardio" id="cardio" />
                <label for="adventure">Cardiovascular</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="str" id="str" />
                <label for="adventure">Strength</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="flex" id="flex" />
                <label for="adventure">Flexibility</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="balance" id="balance" />
                <label for="adventure">Balance</label>
              </div>
            </div>
          </div>
          <div class="form-card">
            <div class="category">
              <input type="checkbox" name="cooking" id="cooking" />
              <label for="exercise">Cooking</label>
            </div>
            <h5>Types of Meals</h5>
            <p>
              Please select the types of meals you are interested in cooking
            </p>
            <div class="meal-types">
              <div class="meal-type">
                <input type="checkbox" name="breakfast" id="breakfast" />
                <label for="adventure">Breakfast</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="lunch" id="lunch" />
                <label for="adventure">Lunch</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="dinner" id="dinner" />
                <label for="adventure">Dinner</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="dessert" id="dessert" />
                <label for="adventure">Dessert</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="nut-free" id="nut-free" />
                <label for="adventure">Nut-Free</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="gluten-free" id="gluten-free" />
                <label for="adventure">Gluten-Free</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="dairy-free" id="dairy-free" />
                <label for="adventure">Dairy-Free</label>
              </div>
              <div class="exer-type">
                <input type="checkbox" name="vegan" id="vegan" />
                <label for="adventure">Vegan</label>
              </div>
            </div>
          </div>
          <div class="form-card">
            <div class="category">
              <input type="checkbox" name="mov-tv" id="mov-tv" />
              <label for="games">Movies and TV</label>
            </div>
            <div class="mov-tv-genre-items">
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="action" id="action" />
                <label for="adventure">Action</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="horror" id="horror" />
                <label for="adventure">Horror</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="comedy" id="comedy" />
                <label for="adventure">Comedy</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="drama" id="drama" />
                <label for="adventure">Drama</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="thriller" id="thriller" />
                <label for="adventure">Thriller</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="sci-fi" id="sci-fi" />
                <label for="adventure">Sci-fi</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="Documentary" id="Documentary" />
                <label for="adventure">Documentary</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="romance" id="romance" />
                <label for="adventure">Romance</label>
              </div>
              <div class="mov-tv-genre-item">
                <input type="checkbox" name="fantasy" id="fantasy" />
                <label for="adventure">Fantasy</label>
              </div>
            </div>
          </div>
          <button type="submit" id="submit-btn" onclick="saveURLParams()">
            <p>Recommend!</p>
          </button>
        </form>
      </section>
    </div>

